# Database Configuration
MONGO_URI=mongodb://localhost:27017/ssi
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster0.mongodb.net/ssi?retryWrites=true&w=majority

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=12h

# Pinata IPFS Configuration
PINATA_JWT=your-pinata-jwt-token
PINATA_GATEWAY=gateway.pinata.cloud

# Ethereum Configuration
CONTRACT_ADDRESS=0xB2e56C41FA91232FfF4d41D2fbc71340C537d49E
SEPOLIA_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative RPC: https://rpc.sepolia.org

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
